<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="737dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scorePlayer1"
                    android:layout_width="wrap_content"
                    android:layout_height="111dp"
                    android:layout_weight="1"
                    android:text="Score player 1" />
            </LinearLayout>

            <Button
                android:id="@+id/addpoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text="+" />

            <Button
                android:id="@+id/decreasescore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text="-" />

            <TextView
                android:id="@+id/finalscoreplayer1"
                android:layout_width="match_parent"
                android:layout_height="41dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scoreplayer2"
                    android:layout_width="wrap_content"
                    android:layout_height="111dp"
                    android:layout_weight="1"
                    android:text="Score player 2" />
            </LinearLayout>

            <Button
                android:id="@+id/addpoints2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text="+" />

            <Button
                android:id="@+id/decreasescore2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text="-" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="267dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/finalscoreplayer2"
                    android:layout_width="match_parent"
                    android:layout_height="41dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/saveScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAVE SCORE" />

                <Button
                    android:id="@+id/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>